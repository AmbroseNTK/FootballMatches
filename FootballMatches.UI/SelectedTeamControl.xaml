<UserControl x:Class="FootballMatches.UI.SelectedTeamControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FootballMatches.UI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50"
             Width="50" Height="50">
    <Grid>
        <Button x:Name="button" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click">
            <Ellipse Width="46" Height="46">
                <Ellipse.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFFF9F00" Offset="0.155"/>
                        <GradientStop Color="Red" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Button>
    </Grid>
</UserControl>
