<UserControl x:Class="FootballMatches.UI.TeamControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FootballMatches.UI"
             mc:Ignorable="d" 
             Height="120" Width="150">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Background="Wheat" x:Name="tbName">Hello World</TextBlock>
            <Button x:Name="btMain" Height="100">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF0086FF" Offset="0"/>
                        <GradientStop Color="#FF92DBFF" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            
        </StackPanel>
        
        
    </Grid>
</UserControl>
